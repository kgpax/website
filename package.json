{
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "yarn build:css minify && yarn build:app",
    "build:app": "remix build",
    "build:css": "npx tailwindcss -i ./app/styles/base.css -o ./public/styles/base.css",
    "dev": "concurrently \"yarn build:css --watch\" \"cross-env NODE_ENV=development netlify dev\"",
    "postinstall": "remix setup node",
    "start": "cross-env NODE_ENV=production netlify dev",
    "test": "jest",
    "prepare": "husky install"
  },
  "dependencies": {
    "@mdx-js/react": "^2.1.1",
    "@netlify/functions": "^0.10.0",
    "@remix-run/netlify": "^1.2.3",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.2.3",
    "dayjs": "^1.10.4",
    "esbuild": "^0.14.42",
    "front-matter": "^4.0.2",
    "mdx-bundler": "^9.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-syntax-highlighter": "^15.4.3",
    "remix": "^1.2.3",
    "tailwind-merge": "^1.2.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-plugin-mdx": "^1.17.0",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "jest-when": "^3.3.1",
    "prettier": "^2.3.0",
    "prettier-plugin-organize-imports": "^2.3.4",
    "pretty-quick": "^3.1.0",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "wait-on": "^6.0.1"
  },
  "engines": {
    "node": ">=14"
  }
}
