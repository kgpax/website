{
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "yarn build:css minify && yarn build:app",
    "build:app": "next build",
    "build:css": "npx tailwindcss -i ./src/styles/main.css -o ./public/styles/main.css",
    "start": "next start",
    "dev": "rm -rf .next && concurrently \"yarn build:css --watch\" \"cross-env NODE_ENV=development PORT=3100 next dev\"",
    "export": "next export",
    "lint": "next lint",
    "test": "jest"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@mdx-js/loader": "^2.1.1",
    "@mdx-js/react": "^2.1.1",
    "@next/mdx": "^12.1.6",
    "dayjs": "^1.10.4",
    "fast-glob": "^3.2.11",
    "front-matter": "^4.0.2",
    "next": "^12.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-syntax-highlighter": "^15.4.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@netlify/plugin-nextjs": "^4.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/mdx": "^2.0.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.42",
    "eslint": "^8.9.0",
    "eslint-plugin-mdx": "^1.17.0",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "jest-when": "^3.3.1",
    "prettier": "^2.3.0",
    "prettier-plugin-organize-imports": "^2.3.4",
    "pretty-quick": "^3.1.0",
    "regenerator-runtime": "^0.13.9",
    "tailwind-merge": "^1.2.1",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "wait-on": "^6.0.1"
  }
}
